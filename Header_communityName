(function () {

  const community =
    new URL(window.location.href).searchParams.get("community") || "";

  if (!community) return;

  function inject() {

    if (document.getElementById("community-title")) return;

    const container = document.querySelector("#entity-container");
    if (!container) {
      requestAnimationFrame(inject);
      return;
    }

    const title = document.createElement("div");
    title.id = "community-title";
    title.innerText = `רישום לקהילת ${community}`;

    title.style.textAlign = "center";
    title.style.fontWeight = "bold";
    title.style.color = "#1f5fa8";
    title.style.margin = "12px 0";
    title.style.fontSize = "clamp(18px,4vw,36px)";

    container.prepend(title);
  }

  inject();

})();
